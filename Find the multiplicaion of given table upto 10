/* Ask the user to input */
#include <stdio.h>

void printMultiplicationTable(int x);

int main() {
    int x;

    // Ask the user to input the number
    printf("Enter a number to print its multiplication table: ");
    scanf("%d", &x);

    // Call the function to print the multiplication table
    printMultiplicationTable(x);

    return 0;
}

void printMultiplicationTable(int x) {
    printf("Multiplication table for %d:\n", x);

    // Loop from 1 to 10 to print the multiplication table
    for (int i = 1; i <= 10; i++) {
        printf("%d x %d = %d\n", x, i, x * i);
    }
}
                Direct Method
#include <stdio.h>

void printMultiplicationTable(int x);

int main() {
    int x = ;  // You can change this value to get the multiplication table for any number.
    printMultiplicationTable(x);
    return 0;
}

void printMultiplicationTable(int x) {
    printf("Multiplication table for %d:\n", x);
    for (int i = 1; i <= 10; i++) {
        printf("%d x %d = %d\n", x, i, x * i);
    }
}
